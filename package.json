{
  "name": "@magento/graphql",
  "private": true,
  "version": "0.0.1",
  "description": "Decoupled GraphQL Server for Magento 2 stores",
  "main": "dist/index.js",
  "bin": {
    "magento-graphql": "bin/magento-graphql"
  },
  "engines": {
    "node": ">=12.14.1",
    "npm": ">=6"
  },
  "scripts": {
    "//": "** See descriptions for all scripts in docs/NPM_SCRIPTS.md** ",
    "build": "npm run clean && node scripts/protogen.js && gql-gen && tsc",
    "start": "bin/magento-graphql",
    "test": "eslint '*/**/*.{js,ts}' && prettier --list-different $(head -1 prettier-globs) && jest",
    "watch": "scripts/dev.js",
    "clean": "rm -rf dist generated",
    "format": "prettier --write $(head -1 prettier-globs)",
    "update-config": "bin/magento-graphql config > .env"
  },
  "author": "Adobe Inc.",
  "license": "UNLICENSED",
  "dependencies": {
    "apollo-server-fastify": "^2.18.2",
    "chalk": "^4.1.0",
    "fastify": "^2.12.1",
    "fastify-cors": "^3.0.2",
    "fastify-gql": "^3.0.7",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^6.2.1",
    "grpc": "^1.24.2",
    "meow": "^7.1.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@types/google-protobuf": "^3.7.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.67",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "chokidar": "^3.3.1",
    "debounce": "^1.2.0",
    "eslint": "^6.8.0",
    "execa": "^3.4.0",
    "grpc-tools": "^1.8.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^25.0.0",
    "ts-protoc-gen": "^0.12.0",
    "typescript": "^3.9.7"
  }
}
