{
    "compilerOptions": {
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true,
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "noEmitOnError": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/**"]
}
